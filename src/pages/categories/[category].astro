---
import { getCollection } from "astro:content";
import BaseHead from "../../components/BaseHead.astro";
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import PageCard from "../../components/PageCard.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../../consts";

export async function getStaticPaths() {
  const allPosts = await getCollection("pages");

  const uniqueCategories = [...new Set(allPosts.map((post) => post.data.categories).flat())];

  return uniqueCategories.map((category) => {
    const filteredPages = allPosts.filter((post) => post.data.categories.includes(category));
    return {
      params: { category },
      props: { pages: filteredPages },
    };
  });
}

const { category } = Astro.params;
const { pages } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main class="flex flex-col gap-4">
      <h1 class="text-center capitalize">{category}</h1>
      {
        pages.map((page) => {
          return <PageCard page={page} />;
        })
      }
    </main>
    <Footer />
  </body>
</html>
